DROP TABLE IF EXISTS Cohort;
DROP TABLE IF EXISTS Student;

CREATE TABLE Cohort (
    CohortId	   INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    Name   TEXT NOT NULL UNIQUE
);


